<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="edit_text_normal">
        <item name="android:textSize">30dp</item>
    </style>

    <style name="button_normal">
        <item name="backgroundTint">@color/dark_gray</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="button_light">
        <item name="backgroundTint">@color/light_gray</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:radius">0dp</item>
        <item name="android:textColor">#111</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="button_accent">
        <item name="backgroundTint">@color/orange</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textSize">30dp</item>
    </style>

    <!--  LandScape  -->

    <style name="edit_text_normal_land">
        <item name="android:textSize">26dp</item>
    </style>

    <style name="button_normal_land">
        <item name="backgroundTint">@color/dark_gray</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textSize">26dp</item>
    </style>

    <style name="button_light_land">
        <item name="backgroundTint">@color/light_gray</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:radius">0dp</item>
        <item name="android:textColor">#111</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textSize">26dp</item>
    </style>

    <style name="button_accent_land">
        <item name="backgroundTint">@color/orange</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textSize">40dp</item>
    </style>


<!--  Xperia Style ( GridLayout )  -->

    <style name="button_xp_normal">
        <item name="backgroundTint">@color/button_gray</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="cornerRadius">100dp</item>
        <item name="android:textSize">40dp</item>
    </style>
    <style name="button_xp_equal">
        <item name="backgroundTint">@color/ultra_light_blue</item>
        <item name="android:textColor">#111</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="cornerRadius">100dp</item>
        <item name="android:textSize">40dp</item>
    </style>
    <style name="button_xp_clear">
        <item name="backgroundTint">@color/light_green</item>
        <item name="android:textColor">#111</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="cornerRadius">100dp</item>
        <item name="android:textSize">40dp</item>
    </style>
    <style name="button_xp_symbol">
        <item name="backgroundTint">@color/light_blue</item>
        <item name="android:textColor">#111</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="cornerRadius">100dp</item>
        <item name="android:textSize">40dp</item>
        <item name="android:typeface">monospace</item>
    </style>

    <!--  Xperia Style ( GridLayout -landscape- )  -->

    <style name="button_xp_normal_land">
        <item name="backgroundTint">@color/button_gray</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="cornerRadius">100dp</item>
        <item name="android:textSize">32dp</item>
    </style>
    <style name="button_xp_equal_land">
        <item name="backgroundTint">@color/ultra_light_blue</item>
        <item name="android:textColor">#111</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="cornerRadius">100dp</item>
        <item name="android:textSize">32dp</item>
    </style>
    <style name="button_xp_clear_land">
        <item name="backgroundTint">@color/light_green</item>
        <item name="android:textColor">#111</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="cornerRadius">100dp</item>
        <item name="android:textSize">32dp</item>
    </style>
    <style name="button_xp_symbol_land">
        <item name="backgroundTint">@color/light_blue</item>
        <item name="android:textColor">#111</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="cornerRadius">100dp</item>
        <item name="android:textSize">32dp</item>
        <item name="android:typeface">monospace</item>
    </style>


</resources>
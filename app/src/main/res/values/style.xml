<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="edit_text_normal">
        <item name="android:textSize">30dp</item>
    </style>

    <style name="button_normal">
        <item name="backgroundTint">@color/dark_gray</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="button_light">
        <item name="backgroundTint">@color/light_gray</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:radius">0dp</item>
        <item name="android:textColor">#111</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="button_accent">
        <item name="backgroundTint">@color/orange</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textSize">30dp</item>
    </style>

    <!--  LandScape  -->

